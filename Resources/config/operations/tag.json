{
    "operations": {
        "deleteTag": {
            "httpMethod": "DELETE",
            "uri": "tag/{name}.xml",
            "parameters": {
                "name": { "location": "uri", "required": true }
            }
        },
        "getTagTotalYear": {
            "httpMethod": "GET",
            "uri": "tag/{name}/totalyear.xml",
            "responseClass": "Geonaute\\Module\\LinkdataBundle\\Service\\GetTagTotalYear\\Response",
            "parameters": {
                "name": { "location": "uri", "required": true },
                "year": { "location": "query", "required": false }
            }
            
        },
        "getTagTotalWeek": {
            "httpMethod": "GET",
            "uri": "tag/{name}/totalweek.xml",
            "responseClass": "Geonaute\\Module\\LinkdataBundle\\Service\\GetTagTotalWeek\\Response",
            "parameters": {
                "name": { "location": "uri", "required": true }
            }
            
        },
        "getTagWeeklyAverage": {
            "httpMethod": "GET",
            "uri": "tag/{name}/weekly_average.xml",
            "responseClass": "Geonaute\\Module\\LinkdataBundle\\Service\\GetTagWeeklyAverage\\Response",
            "parameters": {
                "name": { "location": "uri", "required": true }
            }
            
        }
    }
}