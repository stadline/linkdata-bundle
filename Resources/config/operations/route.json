{
    "operations": {
        "GetRoute": {
            "httpMethod": "GET",
            "uri": "/route/{token}.xml",
            "responseClass": "Geonaute\\Module\\LinkdataBundle\\Service\\GetRoute\\Response",
            "parameters": {
                "token": { "location": "uri", "required": true }
            },
            "additionalParameters": {
                "location": "query"
            }
        },
        "PostRouteCreate": {
            "httpMethod": "POST",
            "uri": "/route/create.xml",
            "responseClass": "Geonaute\\Module\\LinkdataBundle\\Service\\PostRouteCreate\\Response",
            "parameters": {
                "ldid":       { "location": "postField", "required": true },
                "libelle":    { "location": "postField", "required": true },
                "distance":   { "location": "postField", "required": true },
                "ascendant":  { "location": "postField", "required": true },
                "descendant": { "location": "postField", "required": true },
                "locations":  { "location": "postField", "required": true }
            }
        }
    }
}